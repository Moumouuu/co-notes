// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id @default(uuid())
  email         String          @unique
  name          String?
  password      String?
  image         String?         @default("/public/images/default.png")
  // all of the notes that this user has (with shared notes)
  notes         Note[]
  // all likes of the users
  likes         Like[]
  userRightNote UserRightNote[]
}

model Note {
  id             String          @id @default(uuid())
  title          String?
  content        String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  numberDownload Int             @default(0)
  published      Boolean         @default(false)
  linkInvitation String?         @default(uuid())
  userId         String
  image          String?
  likes          Like[]
  // all of the users that have access to this note
  users          User[]
  userRightNote  UserRightNote[]

  preference Preference?
}

model UserRightNote {
  id            String @id @default(uuid())
  note          Note   @relation(fields: [noteId], references: [id])
  noteId        String
  user          User   @relation(fields: [userId], references: [id])
  userId        String
  // the role of the user in the note
  role          Role   @default(USER)
  userId_noteId String @unique
}

model Like {
  id     String @id @default(uuid())
  user   User   @relation(fields: [userId], references: [id])
  userId String
  note   Note   @relation(fields: [noteId], references: [id])
  noteId String
}

model Preference {
  id      String  @id @default(uuid())
  colorBg String?
  font    String?
  // one note has one preference (one to one)
  note    Note    @relation(fields: [noteId], references: [id])
  noteId  String  @unique
}

// ENUMS
enum Role {
  ADMIN
  USER
}

enum Font {
  LUXURIOUS_ROMAN
  NOTO_SANS_GEORGIAN
  VARELA_ROUND
  ASAP
  IMPERIAL_SCRIPT
  TROCHUT
  ABEL
  ACME
  GEOSTAR
}
